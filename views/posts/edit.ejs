<% include ../partials/header %>

<h1>edit Post!</h1>

<form action="/posts/<%= post.id %>?_method=PUT" method="POST">
  <div>
    <input
      type="text"
      name="post[title]"
      placeholder="Title"
      value="<%= post.title %>"
    />
  </div>
  <div>
    <input
      type="text"
      name="post[price]"
      placeholder="Price"
      value="<%= post.price %>"
    />
  </div>
  <div>
    <textarea name="post[description]" placeholder="Description"></textarea>
  </div>
  <div>
    <input
      type="text"
      name="post[location]"
      placeholder="Location"
      value="<%= post.location %>"
    />
  </div>

  <input type="submit" />
</form>
